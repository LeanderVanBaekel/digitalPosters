<form class="add-content" id="add-text" action="add-slide" enctype="multipart/form-data" method="post">
  <legend>Text slide</legend>

  <input class="dis-none" value="text" name="contentType" type="text">

  <div class="putin">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title">
  </div>

  <div class="putin">
    <label for="duration">Duration: </label>
    <input type="number" value="5" name="duration" id="duration"> seconds
  </div>

  <div class="putin">
    <label for="header">Header: </label>
    <input type="text" name="header" id="header">
  </div>

  <div class="putin">
    <label for="sub-header">Sub header: </label>
    <input type="text" name="subHeader" id="sub-header">
</div>

  <div class="putin">
    <label for="main-text">Main text: </label>
    <textarea type="textarea" name="mainText" id="main-text"></textarea>
  </div>

  <input type="file" name="fileToUpload" id="fileToUpload">

  <button class="button" type="submit" name="submit">SUBMIT</button>

</form>


